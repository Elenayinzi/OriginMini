.avatar{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    overflow: hidden;
    margin: 0 auto;
    margin-top: 50rpx;
}
.name{
    margin-top: 10rpx;
    text-align: center;
}
.tip_text{
    color: #1b232a;
    font-size: 30rpx;
    font-weight: Bold;
    text-align: center;
    width: 100%;
    margin-top: 84rpx;
    display: block;
    margin-bottom: 76rpx;
}
.tip_text_blue{
    width: 100%;
    display: block;
    text-align: center;
    font-size: 30rpx;
    color: #1896ff;
    margin-top: 30rpx;
}
.btn_login{
    background: linear-gradient(90deg, rgba(24, 151, 255, 1) 0%, rgba(7, 108, 255, 1) 100%);
    border-radius: 44rpx;
    font-size: 30rpx;
    font-weight: bold;
    color: #fff;
    margin-top: 54rpx;
    width: 300rpx;
}
.mask{
    width: 100%;
    height: 100%;
    background: #000;
    opacity: 0.5;
    position: fixed;
    left: 0;
    top: 0;	
    z-index: 100;
}
.pop_box{
    width: 500rpx;
    background: #FFFFFF;
    border-radius: 10rpx;
    position: absolute;
    left: 50%;
    margin-left: -250rpx;
    top: 50%;
    transform: translateY(-50%);
    z-index: 200;
}
.pop_tip{
    line-height: 156rpx;
    text-align: center;
    font-size: 30rpx;
    color: #1B232A;
}
.pop_btn{
    width: 400rpx;
    height: 88rpx;
    text-align: center;
    line-height: 300rpx;
    background: linear-gradient(90deg,rgba(24,151,255,1) 0%,rgba(7,108,255,1) 100%);
    color: #FFFFFF;
    font-size: 30rpx;
    line-height: 88rpx;
    margin-bottom: 50rpx;
    border-radius: 50rpx;
}