page{
	background: #FBFBFB;
}
.account{
    margin: 24rpx 30rpx 30rpx;
}
.my_info{
    width: 690rpx;
    height: 332rpx;
    background: linear-gradient(90deg,#1C88F0 0%,#1C61EF 100%);
    border-radius: 10rpx;

}
.box_item{
    width: 686rpx;
    height: 214rpx;
    background: #FFFFFF;
    border-radius: 10px;
    margin-top: 32rpx;
}
.box_title{
    padding: 24rpx 0rpx 15rpx 24rpx;
    font-size: 32rpx;
    color: #333;
}
.list_item{
    padding: 0rpx 24rpx;
    display: flex;
    justify-content: space-between;
}
.item{
    text-align: center;
}
.box_icon{
    width: 48rpx;
    height: 48rpx;
}
.icon_text{
    font-size: 24rpx;
    color: #666;
}
.user_info{
    display: flex;
    padding-left: 28rpx;
}
.avatar{
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-top: 40rpx;
}
.name{
    color: #333;
    font-size: 34rpx;
    margin-left: 30rpx;
    margin-top: 85rpx;
}
.kefu{
    display: flex;
    width: 110rpx;
    height: 52rpx;
    background: #3C7BFC;
    border-radius: 200rpx 0rpx 0rpx 200rpx;
    position: absolute;
    right: 35rpx;
    color: #FFFFFF;
    font-size: 20rpx;
    top: 80rpx;
    justify-content: center;
    align-items: center;
}
.kefu_icon{
    width: 32rpx;
    height: 34rpx;
    margin-right: 10rpx;
}
.info_item{
    display: flex;
    padding-left: 28rpx;
    padding-right: 28rpx;
    color: #fff;
    margin-top: 36rpx;
    justify-content: space-between;
}
.item_inner{
    text-align: center;
    font-size: 40rpx;
    font-weight: bold;
}
.item_value{
    font-size: 28rpx;
    color: #D5D5D5;
    font-weight: 400;
}
button::after{
    border:none;
}
button{
    background-color: transparent;
    padding-left: 0;
    padding-right: 0;
    line-height: inherit;
    border-radius: 0;
}