page{
    background-color: #FBFBFB;
}
.item{
    background: #fff;
    margin-top: 32rpx;
    width: 686rpx;
    margin-left: 32rpx;
}
.mobile_item{
    display: flex;
    align-items: center;
    padding: 24rpx 0rpx;
    justify-content: space-between;
}
.mobile{
    font-size: 36rpx;
    padding-left: 24rpx;
}
.check_btn{
    width: 230rpx;
    height: 72rpx;
    border: 1rpx solid #3C7BFC;
    line-height: 72rpx;
    font-size: 28rpx;
    color: #3C7BFC;
    border-radius: 50rpx;
    margin-left: 190rpx;
}
.line{
    height: 1rpx;
    background: #ccc;
    margin-left: 24rpx;
    margin-right: 24rpx;
}
.code_input{
    height: 100rpx;
    display: flex;
    align-items: center;
    padding-left: 24rpx;
    font-size: 30rpx;
}
.btn_unbind{
    background: linear-gradient(90deg, rgba(24, 151, 255, 1) 0%, rgba(7, 108, 255, 1) 100%);
    border-radius: 44rpx;
    font-size: 30rpx;
    font-weight: bold;
    color: #fff;
    margin-top: 54rpx;
    width: 600rpx;
    height: 90rpx;
    line-height: 90rpx;
}
button::after{
    border:none;
}
button{
    background-color: transparent;
    padding-left: 0;
    padding-right: 0;
    line-height: inherit;
    border-radius: 0;
}
.tips{
    display: flex;
    align-items: center;
    margin-top: 30rpx;
}
.tips_icon{
    width: 16rpx;
    height: 16rpx;
    background-color: #3C7BFC;
    border-radius: 50%;
    margin-right: 20rpx;
    margin-left: 56rpx;
}
.tips_text{
    color: #666;
    font-size: 28rpx;
}